@model Nursery

@{
    ViewData["Title"] = "Atualizar Enfermaria";
}

<div class="text-center container">
    <h1>Atualize um elemento</h1>
    <p class="center" style="margin-bottom: 45px;">Atualize a enfermaria selecionada:</p>
    <form asp-controller="Nursery" asp-action="Update" asp-route-id="@Model.Id" method="post">
        <div style="margin-top:10px"class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input type="text" readonly value="@Model.Id" style="border: .2px solid black; border-radius:5px; text-align:center;"class="form-control-plaintext" asp-for="Id" id="Id">
            </div>
        </div>
        <div style="margin-top:10px"class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-10">
                <input type="text" value="@Model.Name" asp-for="Name" id="Name" style="border: .2px solid black; border-radius:5px; text-align:center;"class="form-control-plaintext" >
            </div>
        </div>
        <div style="margin-top:10px"class="form-group row">
            <label asp-for="Leitos" class="col-sm-2 col-form-label">Leitos</label>
            <div class="col-sm-10">
            <input type="text" value="@Model.Leitos" asp-for="Leitos" id="Leitos" style="border: .2px solid black; border-radius:5px; text-align:center;"class="form-control-plaintext" >
            </div>
        </div>
        <div style="margin-top:10px"  class="form-group row">
            <label asp-for="Localization" class="col-sm-2 col-form-label">Localização</label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="Localization" id="Localization">
                    <option selected value="">Selecione</option>
                    <option value="PD - parte superior">Parque de diversão - parte superior</option>
                    <option value="PD - parte inferior">Parque de diversão - parte inferior</option>
                    <option value="PA - parte superior">Parque aquático - parte superior</option>
                    <option value="PA - parte inferior">Parque aquático - parte inferior</option>
                </select>
            </div>
        <input style="margin-top:20px; width:100%; padding: 10px" class="btn btn-success" type="submit" value="Atualizar">
    </form>
</div>