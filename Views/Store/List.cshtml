

@model IEnumerable<AdministracaoShrekPark.Models.Store>

@{
    ViewData["Title"] = "Lojas";
}
<h1>@ViewData["Title"]</h1>


@if(Model.Count() == 0)
{
    <p>Nenhuma loja cadastrada</p>
    <a class="btn btn-primary btn-sm"asp-controller="Store" asp-action="Create">Crie</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Tipo</th>
                <th>Localização</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var store in Model)
            {
                <tr>
                    <td>@store.Id</td>
                    <td>@store.Brand</td>
                    <td>@store.Type</td>
                    <td>@store.Localization</td>
                    <td>
                        <a class="btn btn-primary btn-sm"asp-controller="Store" asp-action="Show" asp-route-id="@store.Id">Mostrar</a>
                        <a class="btn btn-primary btn-sm"asp-controller="Store" asp-action="Update" asp-route-id="@store.Id">Atulizar</a>
                        <a class="btn btn-primary btn-sm"asp-controller="Store" asp-action="Delete" asp-route-id="@store.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a style="width:100%; padding: 10px;"class="btn btn-primary btn-sm"asp-controller="Store" asp-action="Create">Crie</a>
}